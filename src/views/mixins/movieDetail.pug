mixin movieDetail(movie)
  div#movieContainer.movieContainer
    video(src=`/${movie.path}`, width="1200", alt="")
    div#movieControls
      button#playBtn Play
      button#muteBtn Mute
      input#volumeControl(type="range", min="0", max="1", step="0.1", value="0.5")
      div.timelineContainer
        div.timelineValue
          span#curTime 00:00
          span /
          span#ttlTime 00:00
        input#timelineControl(type="range", min="0", step="1", value="0")
  div.movieInfos
    h2 #{movie.title} (#{movie.year})
    p rated by #{movie.owner.username}
    p=movie.note
    p=movie.rating
    ul
      each genre of movie.genres
        li=genre