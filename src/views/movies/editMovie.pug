extends ../layouts/layout

block route
  form(method="POST")
    input(type="text", name="title", required, minlength="2", value=movie.title)
    input(type="text", name="note", required, minlength="4", value=movie.note)
    input(type="number", name="rating", required, min="0", max="5", step="0.5", value=movie.rating)
    input(type="number", name="year", required, min="1900", max="2300", step="1", value=movie.year)
    input(type="text", name="genres", value=genres)
    input(type="submit", value="upload")